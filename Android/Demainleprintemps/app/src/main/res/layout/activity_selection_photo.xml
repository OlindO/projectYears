<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="dlp.application.com.appdlp.SelectionPhoto"
    android:id="@+id/ecranPhotoInscriMembres"
    android:background="#dd4f3060">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="fill_parent"
        android:src="@drawable/logo"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </ImageView>
    <!-- galerie, affichage abandonné, peut être reprise s'il faut afficher plusieurs photos à l'avenir
        <Gallery
            android:id="@+id/gallery"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/blanc">
        </Gallery>
    -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Page suivante"
        android:id="@+id/button"
        android:onClick="finaliserInfinaliserInscriptionMembrescriptionMembre"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#fffdf8ff" />

</RelativeLayout>


