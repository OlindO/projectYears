<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.todob_000.demainleprintemps.Inscription_Fan"
    android:background="#dd4f3060">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Inscription Fan /   Candidat"
        android:id="@+id/titreInscriMembres"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#fffcfffd" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/loginInscriMembres"
        android:layout_below="@+id/titreInscriMembres"
        android:layout_marginTop="10dp"
        android:hint="Login"
        android:gravity="center"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:textColor="#fffcfffd"
        android:textColorHint="#fffcfffd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/titreInscriMembres"
        android:layout_alignEnd="@+id/titreInscriMembres" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/erreurLogin"
        android:layout_below="@+id/loginInscriMembres"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/mdp1InscriMembres"
        android:hint="Mot de passe"
        android:gravity="center"
        android:layout_below="@+id/loginInscriMembres"
        android:layout_marginTop="20dp"
        android:imeOptions="actionNext"
        android:textColorHint="#fffcfffd"
        android:textColor="#fffcfffd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/loginInscriMembres"
        android:layout_alignEnd="@+id/loginInscriMembres" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:id="@+id/mdp2InscriMembres"
        android:hint="Confirmation"
        android:gravity="center"
        android:layout_below="@+id/mdp1InscriMembres"
        android:layout_marginTop="0dp"
        android:imeOptions="actionNext"
        android:textColor="#fffcfffd"
        android:textColorHint="#fffcfffd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/mdp1InscriMembres"
        android:layout_alignEnd="@+id/mdp1InscriMembres" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/erreurMdp"
        android:layout_below="@+id/mdp2InscriMembres"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:gravity="center" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailInscriMembres"
        android:hint="Email"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:textColorHint="#fffcfffd"
        android:textColor="#fffcfffd"
        android:layout_below="@+id/erreurMdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/mdp2InscriMembres"
        android:layout_alignEnd="@+id/mdp2InscriMembres" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/erreurMailInvalide"
        android:layout_below="@+id/emailInscriMembres"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/telephone"
        android:hint="Telephone"
        android:gravity="center"
        android:textColor="#fffcfffd"
        android:textColorHint="#fffcfffd"
        android:layout_below="@+id/erreurMailInvalide"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/emailInscriMembres"
        android:layout_alignEnd="@+id/emailInscriMembres" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/motSecret"
        android:inputType="text"
        android:hint="Mot Secret"
        android:gravity="center"
        android:layout_below="@+id/telephone"
        android:textColorHint="#fffcfffd"
        android:textColor="#fffcfffd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/telephone"
        android:layout_alignEnd="@+id/telephone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/infoMotSecret"
        android:text="Ce mot vous servira Ã  recuperer votre mot de passe  en cas de perte"
        android:gravity="center"
        android:layout_below="@+id/motSecret"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Envoyer"
        android:id="@+id/boutonEnvoyer"
        android:gravity="center"
        android:onClick="terminerInscriMembre"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#fffffafa" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nomInscriFan"
        android:gravity="center"
        android:hint="@string/hintNom"
        android:textColorHint="#fff6f4ff"
        android:textColor="#fffcfffd"
        android:layout_below="@+id/infoMotSecret"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/infoMotSecret"
        android:layout_alignEnd="@+id/infoMotSecret" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/prenomInscriFan"
        android:gravity="center"
        android:hint="@string/hintPrenom"
        android:layout_above="@+id/boutonEnvoyer"
        android:layout_alignLeft="@+id/nomInscriFan"
        android:layout_alignStart="@+id/nomInscriFan"
        android:textColor="#fffcfffd"
        android:textColorHint="#fffcfffd"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
