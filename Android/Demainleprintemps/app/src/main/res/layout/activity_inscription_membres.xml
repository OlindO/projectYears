<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="dlp.application.com.appdlp.InscriptionMembres"
    android:id="@+id/ecranVerifNomPrenomMembres"
    android:background="#dd4f3060">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Inscription Membres"
        android:id="@+id/titreInscriptionMembres"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#fffdf8ff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/champNomInscriptionMembres"
        android:hint="Nom"
        android:gravity="center"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/titreInscriptionMembres"
        android:layout_centerHorizontal="true"
        android:textColorHint="#fffdf8ff"
        android:textColor="#fffdf8ff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/champPrenomInscriptionMembres"
        android:hint="Prenom"
        android:gravity="center"
        android:layout_below="@+id/champNomInscriptionMembres"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColorHint="#fffdf8ff"
        android:textColor="#fffdf8ff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Envoyer"
        android:id="@+id/boutonEnvoyer"
        android:layout_below="@+id/champPrenomInscriptionMembres"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:onClick="identificationMembre"
        android:background="#fffff9fb" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/erreurIdentifiants"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/boutonEnvoyer"
        android:gravity="center" />

</RelativeLayout>
